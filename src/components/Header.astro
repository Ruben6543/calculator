---
import { SITE_TITLE, UGR_WEBSITE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/categories">Categories</HeaderLink>
			<HeaderLink href="/submit">Submit Article</HeaderLink>
			<HeaderLink href="/guidelines">Guidelines</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="ugr-link">
			<a href={UGR_WEBSITE} target="_blank" rel="noopener noreferrer" class="ugr-logo-link">
				<span class="sr-only">Visit University of Granada website</span>
				<span class="ugr-text">UGR</span>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.internal-links a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	.internal-links a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.ugr-link {
		display: flex;
		align-items: center;
	}
	.ugr-logo-link {
		padding: 0.5em 1em;
		background: var(--accent);
		color: white;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 700;
		font-size: 0.9em;
		transition: background 0.2s ease;
	}
	.ugr-logo-link:hover {
		background: var(--accent-dark);
		color: white;
	}
	.ugr-text {
		display: inline-block;
	}
	@media (max-width: 960px) {
		.internal-links {
			flex-wrap: wrap;
			gap: 0.25rem;
		}
		.internal-links a {
			padding: 0.75em 0.4em;
			font-size: 0.9em;
		}
	}
	@media (max-width: 720px) {
		nav {
			flex-wrap: wrap;
			gap: 0.5rem;
		}
		.internal-links {
			order: 3;
			width: 100%;
			justify-content: center;
		}
		.ugr-link {
			margin-left: auto;
		}
	}
</style>
