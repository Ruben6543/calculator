---
import { UGR_WEBSITE, UGR_EMAIL } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-section">
			<h3>UGR Community Blog</h3>
			<p>A platform for the University of Granada community to share knowledge, art, science, and experiences.</p>
		</div>
		<div class="footer-section">
			<h3>Quick Links</h3>
			<nav class="footer-nav">
				<a href="/about">About</a>
				<a href="/categories">Categories</a>
				<a href="/submit">Submit Article</a>
				<a href="/guidelines">Guidelines</a>
				<a href="/blog">Blog</a>
			</nav>
		</div>
		<div class="footer-section">
			<h3>Contact</h3>
			<p>
				<a href={`mailto:${UGR_EMAIL}`}>{UGR_EMAIL}</a>
			</p>
			<p>
				<a href={UGR_WEBSITE} target="_blank" rel="noopener noreferrer">University of Granada</a>
			</p>
		</div>
	</div>
	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} University of Granada. All rights reserved.</p>
		<p class="footer-note">This platform is maintained by the UGR community for the UGR community.</p>
	</div>
</footer>
<style>
	footer {
		padding: 3em 1em 2em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		margin-top: 4em;
	}
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-bottom: 2rem;
	}
	.footer-section h3 {
		color: rgb(var(--black));
		font-size: 1.2em;
		margin-bottom: 1em;
	}
	.footer-section p {
		margin-bottom: 0.5em;
		font-size: 0.9em;
		line-height: 1.6;
	}
	.footer-section a {
		color: var(--accent);
		text-decoration: none;
	}
	.footer-section a:hover {
		text-decoration: underline;
	}
	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 0.5em;
	}
	.footer-nav a {
		display: inline-block;
		font-size: 0.9em;
	}
	.footer-bottom {
		max-width: 1200px;
		margin: 0 auto;
		padding-top: 2em;
		border-top: 1px solid rgb(var(--gray-light));
		text-align: center;
	}
	.footer-bottom p {
		margin: 0.5em 0;
		font-size: 0.85em;
	}
	.footer-note {
		color: rgb(var(--gray));
		font-style: italic;
	}
	@media (max-width: 960px) {
		.footer-content {
			grid-template-columns: repeat(2, 1fr);
		}
	}
	@media (max-width: 640px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		footer {
			padding: 2em 1em 1em 1em;
		}
	}
</style>
